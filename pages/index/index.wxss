/**index.wxss**/
.c_bg {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 0;
}
.container {
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
	width: 100%;
}

/* 地理位置 */
.location{
	margin: 20rpx 0;
	color: white;
}
.l_link{
	display: flex;
	align-items: center; /*垂直居中*/
	justify-content: flex-end; /*水平居中*/
	padding-right: 280rpx;
	letter-spacing: 4rpx;
}
.l_img{
	width: 35rpx;
	height: 35rpx;
	margin-top: 2rpx;
	margin-left: 2rpx;
}

/*天气实况*/
.weather{
	color: white;
}
.w_temp {
	font-size: 400%;
	padding: 100rpx 0 0 15rpx;
}
.w_state {
	padding: 0 0 0 25rpx;
	display: flex;
	align-items: center;
}
.w_pm25 {
	padding: 0 10rpx;
	border-radius: 10rpx;
	font-size: 90%;
	margin-left: 5rpx;
}
.w_img {
	width: 60rpx;
	height: 60rpx;
}

/* 详情展示 */
.details {
	position: absolute;
	top: 59%;
	left: 0;
	background-color: #f9f9f9;
	width: 100%;
	z-index: 1;
	font-size: 80%;
	color: #666;
}

/* 逐时预报 */
.hour {
	background: white;
	margin: 20rpx 0;
	white-space: nowrap;		/*禁止换行*/
}
.h_item {
	
	width: 20%;
	display: inline-block;
	text-align: center;
	padding: 5rpx 0;
}
.h_item view {
	padding: 5rpx 0;
}
.h_img {
	width: 50rpx;
	height: 50rpx;
}

/* 三天预报 */
.three {
	background-color: white;
	margin: 20rpx 0;
	white-space: nowrap;	/*	禁止换行	*/
	padding: 20rpx 0;
}
.t_item {
	display: inline-flex;
	flex-wrap: wrap;		/*可以换行*/
	width: 50%;
	text-align: center;
	align-items: center;		/*垂直居中*/
	padding: 2rpx 0;
	border-right: 1rpx solid #e6e8ff;
}
.t_item:last-child {		/*去掉最后一个的边框*/
	border: none;
}
.t_temp {
	width: 50%;
}
.t_img {
	width: 50rpx;
	height: 50rpx;
	margin-top: 10rpx;
}


/* 生活指数 */
.live {
	background-color: white;
	margin: 20rpx 0;
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	align-items: center;
}
.l_item {
	padding: 20rpx 0;
	width: 33.3%;
}
.l_category {
	padding-top: 5rpx;
	color: #999;
}
.l_img {
	width: 50rpx;
	height: 50rpx;
}